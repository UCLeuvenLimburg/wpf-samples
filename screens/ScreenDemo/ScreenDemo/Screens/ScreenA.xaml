<UserControl x:Class="ScreenDemo.Screens.ScreenA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenDemo.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Go To B" Command="{Binding SwitchToScreenB}" />
        <Button DockPanel.Dock="Bottom" Content="Go To C" Command="{Binding SwitchToScreenC}" />
        <TextBlock FontSize="64" Text="Screen A" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
